{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container py-5 d-flex justify-content-center">

    <div class="card col-12 col-sm-9 col-md-6 col-lg-5 my-5 py-3"> 
        <article class="card-body"> 
        <div class="text-center">
            <h3><i class="fa fa-lock fa-4x"></i></h3>
            <h4 class="card-title text-center mb-4 mt-1">Mot de passe oublié ?</h4> 
            <p>Vous pouvez réinitialiser votre mot de passe ici.</p>
        </div>
            <hr> 

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <form method="post"> 
                <div class="form-group"> 
                    <label for="inputEmail">Votre e-mail</label>
                    <div class="input-group">
                        <div class="input-group-prepend"> 
                            <span class="input-group-text"> 
                                <i class="fa fa-user"></i> 
                            </span> 
                        </div> 
                        <input id="inputEmail" name="email" class="form-control" placeholder="Email" type="email"> 
                    </div> <!-- input-group.// --> 
                </div> <!-- form-group// --> 
 
                <div class="form-group pt-2"> 
                    <button type="submit" class="btn btn-primary btn-block"> Réinitialiser </button> 
                </div> <!-- form-group// --> 
            </form> 
        </article> 
    </div> 
    <!-- card.// -->
    </div>

{% endblock %}
