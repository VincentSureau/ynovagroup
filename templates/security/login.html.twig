{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container py-5 d-flex justify-content-center">

    <div class="card col-12 col-sm-9 col-md-6 col-lg-5 my-5 py-3"> 
        <article class="card-body"> 
        <div class="text-center">
            <h4 class="card-title text-center mb-4 mt-1">Connexion</h4> 
            <p>Merci de vous identifier pour accéder à votre espace</p>
        </div>
            <hr> 
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                {% if error %}
                    <p class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                {% endif %}
            <form method="post"> 
                <div class="form-group"> 
                    <label for="inputEmail">Votre e-mail</label>
                    <div class="input-group">
                        <div class="input-group-prepend"> 
                            <span class="input-group-text"> 
                                <i class="fa fa-user"></i> 
                            </span> 
                        </div> 
                        <input id="inputEmail" name="email" class="form-control" placeholder="Email" type="email"> 
                    </div> <!-- input-group.// --> 
                </div> <!-- form-group// --> 
                <div class="form-group pt-2"> 
                    <label for="inputPassword">Votre mot de passe</label>
                    <div class="input-group"> 
                        <div class="input-group-prepend"> 
                            <span class="input-group-text"> 
                            <i class="fa fa-lock"></i> 
                            </span> 
                        </div> 
                        <input class="form-control" placeholder="******" type="password" id="inputPassword" name="password" class="sr-only"> 
                    </div> <!-- input-group.// --> 
                </div> <!-- form-group// --> 

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-group pt-2"> 
                    <div class="checkbox">
                        <label><input type="checkbox" name="_remember_me" class="mr-1">Se souvenir de moi</label>
                    </div> <!-- checkbox .// -->
                </div>
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                #}

                <div class="form-group pt-2"> 
                    <button type="submit" class="btn btn-primary btn-block"> Connexion </button> 
                </div> <!-- form-group// --> 
                <p class="text-center">
                    <a href="{{ path('app_forgotten_pasword') }}" class="btn">Mot de passe oublié?</a>
                </p> 
            </form> 
        </article> 
    </div> 
    <!-- card.// -->
    </div>

{% endblock %}
