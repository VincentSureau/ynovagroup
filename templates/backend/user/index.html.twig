{% extends 'backend/backend_layout.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

    <div class="card p-4">
        <table id="userTable" class="table table-hover table-striped w-100">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Société</th>
                    <th>Email</th>
                    <th>Utilisateur actif</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

    <p class="text-left">
        <a href="">retour</a>
    </p>

{% include('backend/user/_editModal.html.twig') %}

{% endblock %}

{% block javascripts %}
    <script>
        $('#userTable').DataTable({
            language: {
                url: '/json/fr_FR.json'
            },
            ajax: {
                url: '/api/users',
                dataSrc: ''
            },
            columns: [
                {
                    data: 'id',
                    render: function (data, index, row) {
                        var button = `
                        <btn class="btn btn-success btn-sm edit-modal"
                            data-id="${data}"
                            data-firstname="${row.firstname}"
                            data-lastname="${row.lastname}"
                            data-email="${row.email}"
                            data-company="${row.company.name}"
                        >
                            <i class="fas fa-plus-circle"></i>
                        </btn>`
                        return button
                    }
                },
                { data: 'firstname' },
                { data: 'lastname' },
                { data: 'company',
                  render: function (data, index, row) {
                    return row.company.name || '-'
                  } 
                },
                { data: 'email' },
                { 
                    data: 'isActive',
                    render: function (data) {
                        return (data === true) ? 'oui' : 'non'
                    }
                }
            ],
            initComplete: function() {
                $('.edit-modal').click(function() {
                    var data = $(this).data()

                    $('#firstname').val(data.firstname)
                    $('#lastname').val(data.lastname)
                    $('#email').val(data.email)
                    $('#company').val(data.company)

                    $('#editModal').modal()

                })
            }
            
        })
    </script>
{% endblock %}
