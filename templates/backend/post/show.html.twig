{% extends 'backend/backend_layout.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article: {{ post.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Image/document</th>
                <td>{{ post.picture }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td><a href="{{ path('backend_user_show', {'id': post.author.id}) }}">{{ post.author.firstname }} {{ post.author.lastname }}</a></td>
            </tr>
            <tr>
                <th>Article actif</th>
                <td>{{ post.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('backend_post_index') }}">back to list</a>

    <a href="{{ path('backend_post_edit', {'id': post.id}) }}">edit</a>

    {# {{ include('backend/post/_delete_form.html.twig') }} #}
{% endblock %}