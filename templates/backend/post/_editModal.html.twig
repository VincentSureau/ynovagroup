<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalTitle">Modifier l'article</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="postEdit">
        <div class="modal-body">
              <div class="form-group">
                  <label for="title">Titre de l'article</label>
                  <input class="form-control" type="text" name="title" id="title">
              </div>
              <div class="form-group">
                  <label for="content">Contenu de l'article</label>
                  <textarea class="form-control" type="text" name="content" id="content">
                  </textarea>
              </div>
              <div class="form-group">
                  <label for="author">Auteur de l'article</label>
                  <input class="form-control" type="text" name="author" id="author">
              </div>
              <div class="form-group">
                  <label for="picture">Image de l'article</label>
                  <input class="form-control" type="text" name="picture" id="picture">
              </div>
              <div class="form-group">
                  <label for="isActive">Article publi√©</label>
                  <select name="isActive" id="isActive" class="form-control">
                    <option value="true">oui</option>
                    <option value="false">non</option>
                  </select>
              </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Fermer</button>
          <button type="submit" class="btn btn-primary">Enregistrer</button>
        </div>
      </form>
    </div>
  </div>
</div>