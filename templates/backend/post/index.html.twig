{% extends 'backend/backend_layout.html.twig' %}

{% block title %}Liste des articles{% endblock %}
{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>

<div class="card p-4">
    <table id="postTable" class="table table-hover table-striped  w-100">
        <thead>
            <tr>
                <th>#</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Image</th>
                <th>Publié</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<p class="text-left">
    <a href="">retour</a>
</p>

{% include('backend/post/_editModal.html.twig') %}

{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.js"></script>
    <script>
        $('#postTable').DataTable({
            language: {
                url: '/json/fr_FR.json'
            },
            ajax: {
                url: '/api/posts',
                dataSrc: ''
            },
            columns: [
                {
                    data: 'id',
                    render: function (data, index, row) {
                        var button = `
                        <btn class="btn btn-success btn-sm edit-modal"
                            data-id="${data}"
                            data-title="${row.title}"
                            data-author="${(row.author.firstname + ' ' + row.author.lastname)}"
                            data-picture="${row.picture}"
                            data-isActive="${row.isActive}"
                        >
                            <i class="fas fa-plus-circle"></i>
                        </btn>`
                        return button
                    }
                },
                { data: 'title' },
                { data: 'author' ,
                  render: function (data, index, row) {
                    return (row.author.firstname + ' ' + row.author.lastname) || '-'
                  } 
                },
                { data: 'picture' },
                { 
                    data: 'isActive',
                    render: function (data) {
                        return (data === true) ? 'oui' : 'non'
                    }
                }
            ],
            'drawCallback': function() {
                $('.edit-modal').click(function() {
                    var data = $(this).data()

                    $('#title').val(data.title)
                    $('#content').val(data.content)
                    $('#author').val(data.author)
                    $('#picture').val(data.picture)
                    //$('#picture').val(data.picture)
                    {# /vianney je souhaite récupérer le oui ou non de isActive afin dafficher et de modifier ou non sa publication #}
                    // ce que tu as fait n'est pas faux, mais tu as remarqué ce $(this).data() ?
                    // avec jquery, $(this) représente l'élément sur lequel je clique: le boutton
                    // .data représentent tous les data-quelquechose de l'élément, et data-isActive n'existe pas
                    //$('#isActive').val(isActive) 
                    $('#isActive').val(data.isactive)
                    // nécessaire car même si la valeur du select est bonne
                    // l'option à l'intérieur ne s'affichera pas si elle n'est pas selected
                    $('option[value="'+data.isactive+'"]').attr('selected', true)

                    $('#editModal').modal()

                })
            }
        })
        $('#content').summernote({
            placeholder: 'Contenu de l\'article',
            tabsize: 2,
            height: 150
        });
    </script>
{% endblock %}