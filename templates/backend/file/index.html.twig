{% extends 'backend/backend_layout.html.twig' %}

{% block title %}Liste des documents{% endblock %}

{% block body %}
    <h1>Liste des documents</h1>

<div class="card p-4">
    <table id="filesTable" class="table table-hover table-striped table-responsive w-100">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Description</th>
                <th>Actif</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<p class="text-left">
    <a href="">retour</a>
</p>

{% include('backend/file/_editModal.html.twig') %}

{% endblock %}

{% block javascripts %}
    <script>
        $('#fileTable').DataTable({
            language: {
                url: '/json/fr_FR.json'
            },
            ajax: {
                url: '/api/files',
                dataSrc: ''
            },
            columns: [
                {
                    data: 'id',
                    render: function (data, index, row) {
                        var button = `
                        <btn class="btn btn-success btn-sm edit-modal"
                            data-id="${data}"
                            data-name="${row.name}"
                            data-type="${row.type}"
                            data-description="${row.description}"
                            data-commercial="${row.commercial}"
                            data-users="${row.users}"
                        >
                            <i class="fas fa-plus-circle"></i>
                        </btn>`
                        return button
                    }
                },
                { data: 'name' },
                { data: 'type' },
                { data: 'description' },
                { data: 'commercial' },
                { data: 'users' },
                { 
                    data: 'isActive',
                    render: function (data) {
                        return (data === true) ? 'oui' : 'non'
                    }
                }
            ],
            initComplete: function() {
                $('.edit-modal').click(function() {
                    var data = $(this).data()

                    $('#fileName').val(data.name)
                    $('#fileType').val(data.type)
                    $('#fileDescription').val(data.description)
                    $('#fileCommercial').val(data.commercial)
                    $('#fileUsers').val(data.users)

                    $('#editModal').modal()

                })
            }
        })
    </script>
{% endblock %}