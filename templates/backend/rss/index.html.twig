    <div class="card p-4">
        {{ include('backend/partials/_flash.html.twig') }}
        <div class="d-flex mb-3">
            <a class="btn btn-success btn-sm" id="add-modal" href="{{ path('backend_rss_new') }}"><i class="fas fa-plus-square"></i> Ajouter un flux RSS</a>
        </div>
        <table id="rssTable" class="table table-hover table-striped w-100">
