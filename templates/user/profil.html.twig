{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
     <!-- Container -->
    <div class="container-fluid px-0 py-5 bg-white">
            <div class="container">
                            <!-- Main Back-office Adhérents -->
                <section class="backoffice my-3 py-0">
                    <!-- Profil de l'adhérent -->
                    <div class="container-fluid profil text-center mb-5 ">
                        <div class="card" style="width: 20rem;">
                            <img src="https://via.placeholder.com/468x200?text=Image+de+la+pharmacie" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 id="bo-h5" class="card-title text-uppercase"><strong>Mon profil adhérent</strong></h5>                            
                                <p class="card-text"><strong>Nom <br></strong>{{ user.firstname }}</p>
                                <p class="card-text"><strong>Prénom<br></strong>{{ user.lastname }}</p>

                                <p class="card-text"><strong>Adresse<br></strong>
                                {{ app.user.company.firstadressfield|default('-') }} {{ app.user.company.secondadressfield|default('') }}
                                <br>{{ app.user.company.postalcode|default('') }} {{ app.user.company.city|default('') }}</p>

                                <p class="card-text"><strong>E-mail<br></strong>{{ user.email }}</p>
                                
                                <h6 class="card-title"><strong>Mon commercial</strong></h6>
                                <p class="card-text">{{ app.user.company.commercial.firstname|default('') }} {{ app.user.company.commercial.lastname|default('') }}</p>
                                <p><strong>contact: </strong>{{ app.user.company.commercial.email|default('') }}</p>
                                
                                <button type="button" class="btn btn-danger">
                                        <a href="#" class="btn btn-danger">
                                            Déconnexion 
                                            <i class="fas fa-times"></i>
                                        </a>
                                </button>
                            </div>
                        </div>
                    </div>
                    <!-- Section de téléchargement + tableau de fichiers -->
                    <div class="container-fluid upload mb-5 text-center ">
                        <h5 class="card-title text-center text-uppercase">Mon espace document</h5>
                        <form class="container-fluid mx-auto">
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">
                                    <p  class="label text-center">Quel est le type de votre document ?</p>
                                </label>
                                <select class="select form-control" id="exampleFormControlSelect1">
                                    <option>Facture</option>
                                    <option>Compte rendu</option>
                                    <option>Publicité</option>
                                    <option>Autre</option>
                                </select>
                            </div>
                            <label for="exampleFormControlSelect1">
                                <p class="label text-center">Téléchargement de mon document</p>
                            </label>
                            <div class="wrapper-backoffice">
                                <div class="form-group">
                                        <label for="exampleFormControlFile1"><strong>Formats autorisés :</strong> pdf, doc, docx, jpg, xls, ppt, pptx</label>
                                        <input type="file" class="form-control-file" id="exampleFormControlFile1">
                                </div>   
                                <button type="submit" class="btn btn-primary mb-2">
                                    Envoyer
                                    <i class="fas fa-file-upload"></i>
                                </button> 
                            </div>
                        </form>
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                <th scope="col">Nom du document</th>
                                <th scope="col">Type</th>
                                <th scope="col">Format</th>
                                <th scope="col">Date d'ajout</th>
                                <th scope="col">Télécharger</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">Compte rendu réunion</th>
                                    <td>CR</td>
                                    <td>.pdf</td>
                                    <td>01/06/2019</td>
                                    <td>*</td>
                                </tr>
                                <tr>
                                    <th scope="row">Facture achats</th>
                                    <td>Facture</td>
                                    <td>.pdf</td>
                                    <td>25/04/2019</td>
                                    <td>*</td>
                                </tr>
                                <tr>
                                    <th scope="row">Plaquette publicitaire</th>
                                    <td>Publicité</td>
                                    <td>.pdf</td>
                                    <td>08/03/2019</td>
                                    <td>*</td>
                                    </tr>
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
    </div>

{% endblock %}
