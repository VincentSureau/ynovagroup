<div class="card-deck my-5 justify-content-center">
    {% for post in articles %}
    <div class="card" style="max-width:600px;">
        {% if post.picture is not null %}
        <img src="{{ vich_uploader_asset(post, 'pictureFile') }}" class="card-img-top" alt="{{ post.title }}">
        {% endif %}
        <div class="card-body bg-light">
            <h5 class="card-title text-center">{{ post.title|default('') }}</h5>
            <div class="card-text text-center">
                {{ post.content }}
            </div>
            <p class="card-text">
                <small class="text-muted">Post√© le {{post.createdAt|date("d/m/y")}} par 
                    <cite title="auteur">
                        {{ post.author.__toString|default('') }}
                    </cite>
                </small>
            </p>
        </div>
    </div>
    {% endfor %}
</div>

