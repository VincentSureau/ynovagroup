        <header class="header">
            <!-- Navigation with a burger menu -->
            <nav class="navbar sticky-top navbar-expand-xl navbar-light bg-white ">
                <a class="navbar-brand" href="#">
                    <img src="{{ asset('images/ynovagroup_logo.png') }}" width="200" height="70" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul id="nav" class="navbar-nav mx-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="#accueil">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#about">Qui sommes-nous ?</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#valeurs">Nos valeurs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#difference">Notre différence</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#objectifs">Nos objectifs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Contact</a>
                        </li>
                        <li class="nav-item adherent">
                            <a class="nav-link login-btn btn btn-success adherent-btn btn-sm" href="">
                                <i></i>
                                Espace Adhérent
                                <i class="fas fa-sign-in-alt"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

        <!-- Footer -->
        <footer class="footer">
            <div class="footer-dl m-5 text-center">
                <h6 class="h6 text-uppercase">Téléchargez notre plaquette</h6>
                <a href="http://www.ynovagroup.com/Plaquette/Plaquette_YnovaGroup.pdf" class="m-3" id="plaquette">
                    <i class="fa fa-download fa-3x m-4" aria-hidden="true"></i>
                </a>
            </div>
            <div class="footer-infos m-5 text-center">
                <h6 class="h6 text-uppercase">Contact</h6>
                <div class="footer-infos-element">
                    <a id="mail" href="mailto:contact@ynovagroup.com" class="p-3">contact@ynovagroup.com</a>
                    <a id="tel" href="tel:+33134205268" class="p-3">+33 (0)1 34 20 52 68</a>
                </div>    
            </div>
                  <i onclick="topFunction() " id="myBtn" class="fas fa-level-up-alt"></i>            
        </footer>
        

    <script>
        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function() {scrollFunction()};

        function scrollFunction() {
        if (document.body.scrollTop > 1800 || document.documentElement.scrollTop > 1800) {
        document.getElementById("myBtn").style.display = "block";
        } else {
        document.getElementById("myBtn").style.display = "none";
        }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
        window.scrollTo(0,0);
        }

    </script>

{% endblock %}
